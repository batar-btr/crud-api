{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": false,
    "moduleResolution": "Bundler",
    "composite": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./dist"
  ]
}