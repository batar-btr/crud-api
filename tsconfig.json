{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./dist"
  ]
}